<%# locals: (history:) -%>

<hr class="mx-auto rounded border-t-1 border-blue-200">

<div class="flex flex-row">
  <% if history.trackable_type.eql?("Comment") %>
    <%= render(
      partial: "projects/histories/#{history.trackable_type.underscore}_#{history.action}",
      locals: { history: history, comment: history.trackable }
    ) %>
  <% else %>
    <%= render(
      partial: "projects/histories/#{history.trackable_type.underscore}_#{history.action}",
      locals: { history: history }
    ) %>
  <% end %>
</div>
