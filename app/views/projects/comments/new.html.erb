<%= turbo_frame_tag dom_id(project, :new_comment) do %>
  <%# locals: (create_comment_form:, project:) -%>
  <%= form_with(model: create_comment_form, url: project_comments_path(project)) do |form| %>
    <% if form.object.errors.any? %>
      <div role="alert">
        <strong class="font-bold">There were some errors with your submission</strong>
        <ul>
          <% form.object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-wrap -mx-3">
      <div class="w-full px-3">
      <%= form.text_area :body, class: "appearance-none block w-full bg-gray-50 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "comment..." %>
      </div>
    </div>

    <button type="button" class="">
      <%= form.submit "Add Comment", class: "bg-blue-400 py-auto px-4 rounded-3xl text-white h-8" %>
    </button>
  <% end %>
<% end %>
